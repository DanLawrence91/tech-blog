<h3>Create a New Post:</h3>

<form class="form new-post-form">
  <div class="form-group">
    <input class="form-input w-100" type="text" id="post-title" name="post-title" placeholder="Title here" />
  </div>
  <div class="form-group">

    <textarea class="form-input w-100" id="post-content" name="post-content" rows="5" placeholder="Content here"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Create</button>
  </div>
</form>

<script src="./js/post.js"></script>