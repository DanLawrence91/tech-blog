<div class="row">
  <div class="col-auto">
    <h2>Hi {{username}}, this is your dashboard</h2>
  </div>
</div>

<div class="post-list mt-4">
  <h3>Here are your current posts:</h3>

  {{#each posts as |post|}}
    <div class="row mb-4 flex-column border-secondary border-custom">
      <div class="border-secondary border-custom p-2 bg-secondary">
        <h4><a href="/update/{{post.id}}">- {{post.title}}</a></h4>
      </div>
      <div class="p-2">
        <p>{{post.content}}</p>
      </div>
    </div>
  {{/each}}
</div>

<div class="row mt-4">

  <form class="form new-post-btn">
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Add a new post</button>
    </div>
  </form>

</div>

<script src="./js/dashboard.js"></script>